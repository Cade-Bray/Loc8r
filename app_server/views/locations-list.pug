extends layout
include _includes/sharedHTMLfunctions

block content
    .row.banner
        .col-12
            h1= pageHeader.title
                small.pl-3 &nbsp;#{pageHeader.strapline}

    .row
        .col-12.col-md-8
            each location in locations
                .mb-3
                    .card
                        .card-block
                            h4
                                a(href=`/location/${location._id}`)= location.name
                                small.ml-3 &nbsp;
                                    +outputRating(location.rating)
                                span.badge.badge-pill.badge-default.float-right= location.distance.calculated
                                    |  mi
                            p.address= location.address
                        .facilities
                            each facility in location.facilities || []
                                span.badge.badge-warning= facility

        .col-12.col-md-4
            p.lead= sidebar
